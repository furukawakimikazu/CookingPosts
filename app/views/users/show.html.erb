<div class="container">
  <h3>マイページ</h3>
  <div class="row">
    <div class="col-sm-2 text-center">

      <%= attachment_image_tag @user, :profile_image, size: '170x170', fallback: "no-image.png" %>


      <%= @user.username %>

      <% if @user == current_user %>
        <%= @user.email %>
        <%= link_to "編集", edit_user_path(@user) %>
      <% end %>

      <div class=""><%= @user.profile %></div>

    </div>
  </div>
</div>

<% @user.recipes.each do |recipe| %>
  <%= attachment_image_tag recipe, :image, size: '300x300' %>
  <%= link_to "削除", recipe_path(recipe), method: :delete %>
<% end %>